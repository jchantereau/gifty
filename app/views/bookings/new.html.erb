<div class="bkg-form text-center">
    <div class="bkg-form-content">
        <h1>1 <%= @gift.name %></h1>
        <h1>@<%= @gift.bar.name %></h1>
        <%= simple_form_for [@gift.bar, @booking] do |f| %>
        <%= f.error_notification %>
        <%= f.hidden_field :gift_id %>
        <%= f.input :friend_name, placeholder: "friend name", label: false %>
        <%= f.input :friend_email, placeholder: "friend email", label: false %>
        <%= f.input :friend_phone_number, placeholder: "friend phone number", label: false %>
        <%= f.input :message, :as => :text, placeholder: "Add a message for your friend", input_html: {}, label: false %>
        <%= f.button :submit, class: "btn btn-primary btn-lg" %>
        <% end %>
    </div>
</div>


