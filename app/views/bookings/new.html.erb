<div class="container-fluid" style="background-image: url('http://www.barmag.fr/wp-content/uploads/2013/12/GROWLER-FINE-MOUSSE-550.jpg')">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 ">
      <div class="bkg-form text-center">
        <div class="bkg-form-gradient"></div>
          <div class="bkg-form-content">

            <div class="row text-center" >
              <div class="col-xs-12">
                <h1>1 <%= @gift.name %> </h1>
                <h1>@<%= @gift.bar.name %></h1>

              </div>
            </div>

            <div class="row">
              <div class="col-xs-12">
              <%= simple_form_for [@gift.bar, @booking] do |f| %>
              <%= f.error_notification %>
              <%= f.hidden_field :gift_id %>
              <%= f.input :friend_name, placeholder: "friend name", label: false %>
              <%= f.input :friend_email, placeholder: "friend email", label: false %>
              <%= f.input :friend_phone_number, placeholder: "friend phone number", label: false %>
              <%= f.input :message, placeholder: "Add a message for your friend", input_html: {}, label: false %>

              <%= f.button :submit, class: "btn btn-primary btn-lg col-xs-10 col-xs-offset-1 text-center" %>
              <% end %>

              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
